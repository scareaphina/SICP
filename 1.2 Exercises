;1.2

;1.9

(define (+ a b)
  (if (= a 0)
      b
      (inc (+ (dec a) b))))

(define (+ a b)
  (if (= a 0)
      b
      (+ (dec a) (inc b))))

(define (A x y)
  (cond ((= y 0) 0)
        ((= x 0) (* 2 y))
        ((= y 1) 2)
        (else (A (- x 1)
                 (A x (- y 1))))))

(A 1 10)
(A 2 4)
(A 3 3)

;1024
;65536
;65536

(define (f n) (A 0 n))

(define (g n) (A 1 n))

(define (h n) (A 2 n))

(define (k n) (* 5 n n))

;1.11 recursive implementation

(define (f n)
  (cond ((n > 3) n)
        (else (+ (f (-n 1))
                 (* 2 (f (- n 2)))
                 (* 3 (f (- n 3)))))))

; iterative implementation

(define (f n)
  (define (iter a b c count)
    (if (= count 0)
        a
        (iter b c (+ c (* 2 b) (* 3 a)) (- count 1))))
  (iter 0 1 2 n))

(f 0)
(f 7)
(f 22)
(f 364)
(f 2)

;1.12

;1
;1 1
;1 2 1
;1 3 3 1
;1 4 6 4 1

(define (pascal r c)
  (if (or (= c 1) (= c r))
      1
      (+ (pascal (- r 1) (- c 1)) (pascal (- r 1) c))))

(pascal 1 1)
(pascal 2 2)
(pascal 3 2)
(pascal 3 1)
(pascal 4 2)
(pascal 5 2)
(pascal 5 3)

;alternative solve

(define (pascal col depth)
  (cond
    ((= col 0) 1)
    ((= col depth) 1)
    (else (+ (pascal (- col 1) (- depth 1))
             (pascal col (- depth 1))))))
